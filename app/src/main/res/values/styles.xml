<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme"></style>

    <style name="response_item_header" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="response_item_header.normal" parent="response_item_header">
        <item name="android:textColor">#051370</item>
    </style>

    <style name="response_item_header.top" parent="response_item_header">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="response_item_header_subtext" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="response_item_header_subtext.normal" parent="response_item_header_subtext">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="response_item_header_subtext.top" parent="response_item_header_subtext">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="response_item_summary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="minHeight">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="response_item_summary_text.normal" parent="response_item_summary_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="response_item_summary_text.top" parent="response_item_summary_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_token_usage_text" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="item_token_usage_text.normal" parent="item_token_usage_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_token_usage_text.top" parent="item_token_usage_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_token_usage_label" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">-20dp</item>
    </style>

    <style name="item_token_usage_label.normal" parent="item_token_usage_label">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_token_usage_label.top" parent="item_token_usage_label">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>