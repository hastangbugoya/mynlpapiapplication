<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:hint="Enter URL here"
        tools:text="URL to summarize"/>
    <Spinner
        android:id="@+id/max_tokens_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/summarize_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/summarize_button"
        app:layout_constraintBottom_toBottomOf="@id/summarize_button"
        android:layout_margin="4dp"
        android:padding="4dp"
        tools:text="99%"
        android:textAlignment="textStart"/>
    <Button
        android:id="@+id/summarize_button"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/url"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Summarize" />
    <TextView
        android:id="@+id/summary_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/summarize_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="4dp"
        tools:text="Response displayed here"
        android:textColor="@color/black"
        android:padding="4dp"
        android:background="#0F7DB300"/>

</androidx.constraintlayout.widget.ConstraintLayout>